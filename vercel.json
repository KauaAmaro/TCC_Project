{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/produtos",
      "dest": "api/produtos.py"
    },
    {
      "src": "/api/leituras",
      "dest": "api/leituras.py"
    },
    {
      "src": "/api/relatorio",
      "dest": "api/relatorio.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}